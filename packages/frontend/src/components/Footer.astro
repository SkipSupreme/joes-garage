---
import { Image } from 'astro:assets';
import { getSiteSettings } from '../lib/payload';

const year = new Date().getFullYear();

// Fetch site settings from CMS for dynamic footer content
let settings: any = null;
try {
  settings = await getSiteSettings();
} catch {
  // CMS not available — use hardcoded fallback
}

const shopName = settings?.shopName || "Joe's Garage";
const phone = settings?.phone || '(403) 874-5637';
const email = settings?.email || 'joe@joesgarage.mobi';
const address = settings?.address || '355 8 St SW, Calgary, AB';

// Logo from CMS with fallback to public static file
const logoSrc = settings?.logo?.sizes?.thumbnail?.url || settings?.logo?.url || '/logo.webp';
const logoAlt = settings?.logo?.alt || shopName;

// Parse hours from CMS or use defaults
const hours = settings?.hours?.length
  ? settings.hours
  : [
      { day: 'Monday', open: '10:00 AM', close: '7:00 PM' },
      { day: 'Tuesday', open: '10:00 AM', close: '7:00 PM' },
      { day: 'Wednesday', open: '10:00 AM', close: '7:00 PM' },
      { day: 'Thursday', open: '10:00 AM', close: '7:00 PM' },
      { day: 'Friday', open: '10:00 AM', close: '7:00 PM' },
      { day: 'Saturday', open: '10:00 AM', close: '7:00 PM' },
      { day: 'Sunday', open: '10:00 AM', close: '7:00 PM' },
    ];

// Social links from CMS or defaults
const socialLinks = settings?.socialLinks?.length
  ? settings.socialLinks
  : [
      { platform: 'Facebook', url: 'https://facebook.com/joesbikeclub' },
      { platform: 'Instagram', url: 'https://instagram.com/joesgarageyyc' },
    ];

// Group weekday hours for compact display
function formatHours(hours: any[]) {
  const weekdays = hours.filter((h: any) =>
    ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'].includes(h.day)
  );
  const saturday = hours.find((h: any) => h.day === 'Saturday');
  const sunday = hours.find((h: any) => h.day === 'Sunday');

  // Check if all weekdays have the same hours
  const allSameWeekday = weekdays.length > 0 && weekdays.every(
    (h: any) => h.open === weekdays[0].open && h.close === weekdays[0].close
  );

  const result: { label: string; time: string }[] = [];

  if (allSameWeekday && weekdays.length > 0) {
    const wd = weekdays[0];
    result.push({
      label: 'Monday – Friday',
      time: wd.open === 'Closed' ? 'Closed' : `${wd.open} – ${wd.close}`,
    });
  } else {
    weekdays.forEach((h: any) => {
      result.push({
        label: h.day,
        time: h.open === 'Closed' ? 'Closed' : `${h.open} – ${h.close}`,
      });
    });
  }

  if (saturday) {
    result.push({
      label: 'Saturday',
      time: saturday.open === 'Closed' ? 'Closed' : `${saturday.open} – ${saturday.close}`,
    });
  }
  if (sunday) {
    result.push({
      label: 'Sunday',
      time: sunday.open === 'Closed' ? 'Closed' : `${sunday.open} – ${sunday.close}`,
    });
  }

  return result;
}

const displayHours = formatHours(hours);

// Social link icon map
