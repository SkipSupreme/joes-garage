---

<footer class="relative bg-coal text-cream/80 overflow-hidden">
  <!-- Subtle diagonal pattern overlay -->
  <div class="absolute inset-0 pattern-diagonal pointer-events-none"></div>

  <!-- Main footer content -->
  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pt-16 pb-8 3xl:pt-20 3xl:pb-10">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8 3xl:gap-16">

      <!-- Brand column -->
      <div class="lg:col-span-1">
        <div class="mb-4">
          <Image src={logoSrc} alt={logoAlt} width={168} height={120} loading="lazy" class="h-12 w-auto" />
        </div>
        <p class="text-sm text-cream/60 leading-relaxed mb-6">
          Calgary's neighbourhood bike shop. Expert repairs, quality rentals, and honest advice since day one.
        </p>
        <!-- Social links -->
        <div class="flex gap-3">
          {socialLinks.map((link: any) => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="w-9 h-9 flex items-center justify-center rounded-lg bg-cream/5 hover:bg-amber/20 hover:text-amber transition-all duration-200"
              aria-label={link.platform}
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={socialIcons[link.platform] || socialIcons.Facebook} />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Quick links -->
      <div>
        <h3 class="text-sm font-display font-bold text-cream tracking-wide uppercase mb-4">Quick Links</h3>
        <ul class="space-y-2.5">
          <li><a href="/services" class="text-sm hover:text-amber transition-colors">Repair Services</a></li>
          <li><a href="/book" class="text-sm hover:text-amber transition-colors">Rent a Bike</a></li>
          <li><a href="/gallery" class="text-sm hover:text-amber transition-colors">Gallery</a></li>
          <li><a href="/about" class="text-sm hover:text-amber transition-colors">About Joe</a></li>
          <li><a href="/contact" class="text-sm hover:text-amber transition-colors">Contact Us</a></li>
        </ul>
      </div>

      <!-- Hours -->
      <div>
        <h3 class="text-sm font-display font-bold text-cream tracking-wide uppercase mb-4">Shop Hours</h3>
        <ul class="space-y-2 text-sm">
          {displayHours.map((h) => (
            <li class="flex justify-between gap-4">
              <span>{h.label}</span>
              <span class="text-amber font-medium">{h.time}</span>
            </li>
          ))}
        </ul>
        <p class="mt-4 text-xs text-cream/40">Hours may vary on holidays</p>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-sm font-display font-bold text-cream tracking-wide uppercase mb-4">Visit the Shop</h3>
        <address class="not-italic space-y-3 text-sm">
          <div class="flex items-start gap-2.5">
            <svg class="w-4 h-4 mt-0.5 text-amber shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <a href="https://maps.app.goo.gl/J1D7gmAV4jtRKa137" target="_blank" rel="noopener noreferrer" class="hover:text-amber transition-colors">
              <Fragment set:html={address.replace(', ', '<br/>')} />
            </a>
          </div>
          <div class="flex items-center gap-2.5">
            <svg class="w-4 h-4 text-amber shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <a href={`tel:${phone.replace(/[^\d+]/g, '')}`} class="hover:text-amber transition-colors">{phone}</a>
          </div>
          <div class="flex items-center gap-2.5">
            <svg class="w-4 h-4 text-amber shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <a href={`mailto:${email}`} class="hover:text-amber transition-colors">{email}</a>
          </div>
        </address>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 pt-6 border-t border-cream/10 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-xs text-cream/40">
        &copy; {year} {shopName}. All rights reserved.
      </p>
      <p class="text-xs text-cream/30">
        Keeping Calgary rolling since day one.
      </p>
    </div>
  </div>
</footer>
