---
interface Props {
  showForm?: boolean;
  infoItems?: Array<{
    icon: string;
    label: string;
    sublabel?: string;
    href?: string;
  }>;
  hours?: Array<{
    days: string;
    hours: string;
  }>;
  socialLinks?: Array<{
    platform: string;
    url: string;
  }>;
}

const { showForm = true, infoItems, hours, socialLinks } = Astro.props;

const apiUrl = import.meta.env.PUBLIC_API_URL || 'http://localhost:3001';

const iconSvgs: Record<string, string> = {
  mapPin: '<path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>',
  phone: '<path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>',
  email: '<path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>',
};

const socialSvgs: Record<string, string> = {
  facebook: '<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>',
  instagram: '<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>',
};
---

<section class="py-10 sm:py-16 lg:py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-10 lg:gap-16 3xl:gap-24" data-reveal>

      <!-- Left: Contact details -->
      <div class="lg:col-span-2 space-y-10">
        {infoItems && infoItems.length > 0 && (
          <div>
            <h2 class="text-sm font-display font-bold text-coal tracking-wide uppercase mb-4">Visit the Shop</h2>
            <address class="not-italic space-y-4">
              {infoItems.map((item) => (
                <div class="flex items-start gap-3">
                  <div class="w-10 h-10 rounded-xl bg-amber/10 flex items-center justify-center shrink-0 mt-0.5">
                    <svg class="w-5 h-5 text-amber" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <Fragment set:html={iconSvgs[item.icon] || iconSvgs.mapPin} />
                    </svg>
                  </div>
                  <div>
                    {item.href ? (
                      <a href={item.href} class="font-medium text-coal hover:text-amber transition-colors" target={item.href.startsWith('http') ? '_blank' : undefined} rel={item.href.startsWith('http') ? 'noopener noreferrer' : undefined}>{item.label}</a>
                    ) : (
                      <span class="font-medium text-coal">{item.label}</span>
                    )}
                    {item.sublabel && <p class="text-ink-muted text-sm">{item.sublabel}</p>}
                  </div>
                </div>
              ))}
            </address>
          </div>
        )}

        {hours && hours.length > 0 && (
          <div>
            <h2 class="text-sm font-display font-bold text-coal tracking-wide uppercase mb-4">Shop Hours</h2>
            <ul class="space-y-2.5">
              {hours.map((h) => (
                <li class="flex justify-between text-sm">
                  <span class="text-ink-muted">{h.days}</span>
                  <span class="font-medium text-coal">{h.hours}</span>
                </li>
              ))}
            </ul>
          </div>
        )}

        {socialLinks && socialLinks.length > 0 && (
          <div>
            <h2 class="text-sm font-display font-bold text-coal tracking-wide uppercase mb-4">Follow Along</h2>
            <div class="flex gap-3">
              {socialLinks.map((social) => (
                <a href={social.url} target="_blank" rel="noopener noreferrer" class="w-10 h-10 flex items-center justify-center rounded-xl bg-cream-dark border border-parchment hover:border-amber/30 hover:bg-amber/5 text-ink-muted hover:text-amber transition-all" aria-label={social.platform}>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <Fragment set:html={socialSvgs[social.platform] || ''} />
                  </svg>
                </a>
              ))}
            </div>
          </div>
        )}
      </div>

      <!-- Right: Contact form -->
      {showForm && (
        <div class="lg:col-span-3">
          <div class="p-8 sm:p-10 3xl:p-12 rounded-2xl bg-cream-dark border border-parchment">
            <h2 class="text-2xl font-display font-bold text-coal mb-6">Send a Message</h2>

            <form class="space-y-5" data-api-url={apiUrl} x-data="contactForm" @submit.prevent="submit">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
                <div>
                  <label for="name" class="block text-sm font-medium text-coal mb-1.5">Name</label>
                  <input type="text" id="name" name="name" required class="w-full px-4 py-3 rounded-xl bg-cream border border-parchment text-coal placeholder:text-ink-light focus:outline-none focus:border-amber focus:ring-1 focus:ring-amber/30 transition-colors" placeholder="Your name" />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-coal mb-1.5">Email</label>
                  <input type="email" id="email" name="email" required class="w-full px-4 py-3 rounded-xl bg-cream border border-parchment text-coal placeholder:text-ink-light focus:outline-none focus:border-amber focus:ring-1 focus:ring-amber/30 transition-colors" placeholder="you@email.com" />
                </div>
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-coal mb-1.5">Phone <span class="text-ink-light font-normal">(optional)</span></label>
                <input type="tel" id="phone" name="phone" class="w-full px-4 py-3 rounded-xl bg-cream border border-parchment text-coal placeholder:text-ink-light focus:outline-none focus:border-amber focus:ring-1 focus:ring-amber/30 transition-colors" placeholder="(403) 555-1234" />
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-coal mb-1.5">What's this about?</label>
                <select id="subject" name="subject" required class="w-full px-4 py-3 rounded-xl bg-cream border border-parchment text-coal focus:outline-none focus:border-amber focus:ring-1 focus:ring-amber/30 transition-colors">
                  <option value="">Select a topic...</option>
                  <option value="repair">Repair Quote</option>
                  <option value="rental">Rental Question</option>
                  <option value="general">General Inquiry</option>
                  <option value="other">Something Else</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-coal mb-1.5">Message</label>
                <textarea id="message" name="message" rows="5" required class="w-full px-4 py-3 rounded-xl bg-cream border border-parchment text-coal placeholder:text-ink-light focus:outline-none focus:border-amber focus:ring-1 focus:ring-amber/30 transition-colors resize-none" placeholder="Tell us what you need..."></textarea>
              </div>

              <div x-show="!sent">
                <button type="submit" :disabled="sending" class="group w-full sm:w-auto px-8 py-3.5 bg-coal text-cream font-bold rounded-xl hover:bg-coal-light disabled:opacity-50 disabled:cursor-not-allowed transition-all">
                  <span x-show="!sending" class="inline-flex items-center gap-2">
                    Send Message
                    <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
                  </span>
                  <span x-show="sending" x-cloak class="flex items-center gap-2">
                    <svg class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"/></svg>
                    Sending...
                  </span>
                </button>
              </div>

              <div x-show="sent" x-cloak class="p-4 rounded-xl bg-success/10 border border-success/20">
                <p class="text-sm font-medium text-success flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                  Message sent! We'll get back to you soon.
                </p>
              </div>

              <div x-show="error" x-cloak class="p-4 rounded-xl bg-red-50 border border-red-200">
                <p class="text-sm font-medium text-red-700 flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>
                  <span x-text="error"></span>
                </p>
              </div>
            </form>
          </div>
        </div>
      )}
    </div>
  </div>
</section>

<script>
  document.addEventListener('alpine:init', () => {
    window.Alpine.data('contactForm', () => ({
      sending: false,
      sent: false,
      error: '',
      async submit() {
        this.sending = true;
        this.error = '';
        const form = this.$el;
        const apiUrl = form.dataset.apiUrl || 'http://localhost:3001';
        const data = Object.fromEntries(new FormData(form));
        try {
          const res = await fetch(apiUrl + '/api/contact', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data),
          });
          if (!res.ok) throw new Error('Failed to send');
          this.sending = false;
          this.sent = true;
          form.reset();
        } catch {
          this.sending = false;
          this.error = 'Something went wrong. Please try calling us instead!';
        }
      },
    }));
  });
</script>
