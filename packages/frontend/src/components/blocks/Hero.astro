---
interface Props {
  heading: string;
  subheading?: string;
  backgroundImage?: { url: string; alt?: string };
  ctaText?: string;
  ctaLink?: string;
}

const { heading, subheading, backgroundImage, ctaText, ctaLink } = Astro.props;
---

<section class="relative min-h-[60vh] flex items-center overflow-hidden bg-coal">
  {backgroundImage?.url ? (
    <div class="absolute inset-0">
      <img src={backgroundImage.url} alt={backgroundImage.alt || ''} class="w-full h-full object-cover" loading="eager" />
      <div class="absolute inset-0 bg-coal/70"></div>
    </div>
  ) : (
    <div class="absolute inset-0 bg-gradient-to-br from-coal via-coal-light to-coal">
      <div class="absolute -top-20 -right-20 w-[500px] h-[500px] bg-amber/8 rounded-full blur-[120px]"></div>
      <div class="absolute inset-0 grain"></div>
    </div>
  )}

  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-20 lg:py-32 w-full">
    <div class="max-w-3xl">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-extrabold text-cream tracking-tight leading-tight text-shadow-lg animate-fade-up">
        {heading}
      </h1>
      {subheading && (
        <p class="mt-6 text-lg sm:text-xl text-cream/60 leading-relaxed max-w-xl animate-fade-up delay-100">
          {subheading}
        </p>
      )}
      {ctaText && ctaLink && (
        <div class="mt-10 animate-fade-up delay-200">
          <a href={ctaLink} class="inline-flex items-center gap-2 px-8 py-4 bg-red text-cream font-bold rounded-xl hover:bg-red-light hover:shadow-xl hover:shadow-red/20 hover:-translate-y-0.5 transition-all duration-200">
            {ctaText}
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"/></svg>
          </a>
        </div>
      )}
    </div>
  </div>

  <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-cream to-transparent"></div>
</section>
