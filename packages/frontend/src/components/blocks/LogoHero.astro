---
interface Props {
  eyebrow?: string;
  heading: string;
  headingAccent?: string;
  subtitle?: string;
  ctaButtons?: Array<{ text: string; link: string; style?: 'primary' | 'secondary' }>;
  trustIndicators?: Array<{ text: string }>;
}

const { eyebrow, heading, headingAccent, subtitle, ctaButtons, trustIndicators } = Astro.props;
---

<section class="relative lg:min-h-[80vh] flex items-center overflow-hidden bg-coal">
  <!-- Industrial backdrop -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-br from-coal via-coal-light to-coal"></div>
    <div class="absolute inset-0 pattern-corrugated"></div>
    <div class="absolute -top-20 -right-20 w-[500px] h-[500px] bg-red/8 rounded-full blur-[120px]"></div>
    <div class="absolute -bottom-32 left-1/4 w-[600px] h-[300px] bg-amber/4 rounded-full blur-[100px]"></div>
    <div class="absolute inset-0 grain"></div>
  </div>

  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pt-12 pb-24 sm:pt-16 sm:pb-28 lg:pt-24 lg:pb-32">
    <div class="relative z-10 grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-12 items-center">
      <!-- Left: Text content -->
      <div class="max-w-xl 3xl:max-w-2xl">
        {eyebrow && (
          <div class="animate-fade-up inline-flex items-center gap-2 px-3 py-1.5 mb-5 rounded-full bg-red/10 border border-red/20">
            <div class="w-2 h-2 rounded-full bg-red"></div>
            <span class="text-xs font-medium text-red-light tracking-wide uppercase">{eyebrow}</span>
          </div>
        )}

        <h1 class="animate-fade-up delay-100 text-3xl sm:text-5xl lg:text-6xl xl:text-7xl 3xl:text-8xl font-display font-extrabold text-cream leading-[0.95] tracking-tight">
          {heading}
          {headingAccent && (
            <span class="block text-red mt-1 sm:mt-2">{headingAccent}</span>
          )}
        </h1>

        {subtitle && (
          <p class="animate-fade-up delay-200 mt-5 sm:mt-6 text-base sm:text-lg lg:text-xl 3xl:text-2xl text-cream/60 leading-relaxed max-w-md 3xl:max-w-lg">
            {subtitle}
          </p>
        )}

        {ctaButtons && ctaButtons.length > 0 && (
          <div class="animate-fade-up delay-300 mt-6 sm:mt-8 flex flex-wrap gap-3 sm:gap-4">
            {ctaButtons.map((btn) => (
              btn.style === 'secondary' ? (
                <a
                  href={btn.link}
                  class="inline-flex items-center gap-2 px-6 sm:px-8 py-3.5 sm:py-4 text-cream/80 font-medium rounded-xl border border-cream/15 hover:border-cream/30 hover:text-cream hover:bg-cream/5 transition-all duration-200"
                >
                  {btn.text}
                </a>
              ) : (
                <a
                  href={btn.link}
                  class="group inline-flex items-center gap-2 px-6 sm:px-8 py-3.5 sm:py-4 bg-red text-cream font-bold rounded-xl hover:bg-red-light hover:shadow-xl hover:shadow-red/20 hover:-translate-y-0.5 transition-all duration-200"
                >
                  {btn.text}
                  <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                  </svg>
                </a>
              )
            ))}
          </div>
        )}

        {trustIndicators && trustIndicators.length > 0 && (
          <div class="animate-fade-up delay-400 mt-6 sm:mt-10 flex flex-wrap items-center gap-3 sm:gap-6 text-xs sm:text-sm text-cream/40">
            {trustIndicators.map((indicator) => (
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-red" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                <span>{indicator.text}</span>
              </div>
            ))}
          </div>
        )}
      </div>

      <!-- Right: Logo showcase -->
      <div class="hidden lg:flex items-center justify-center animate-fade-in delay-500">
        <div class="relative w-full max-w-2xl 3xl:max-w-3xl flex items-center justify-center">
          <div class="absolute w-[520px] h-[520px] 3xl:w-[640px] 3xl:h-[640px] rounded-full border border-cream/5"></div>
          <div class="absolute w-[600px] h-[600px] 3xl:w-[720px] 3xl:h-[720px] rounded-full border border-dashed border-cream/3 animate-[spin_120s_linear_infinite]"></div>
          <img src="/logo-hero.png" alt="Joe's Garage â€” Rentals & Repairs" class="relative w-[520px] 3xl:w-[640px] drop-shadow-2xl" width="1200" height="857" />
        </div>
      </div>
    </div>
  </div>

  <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-cream to-transparent"></div>
</section>
