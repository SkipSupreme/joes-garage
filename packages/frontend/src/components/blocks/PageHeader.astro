---
interface Props {
  eyebrow?: string;
  heading: string;
  headingAccent?: string;
  subtitle?: string;
}

const { eyebrow, heading, headingAccent, subtitle } = Astro.props;
---

<section class="relative py-10 sm:py-16 lg:py-24 bg-coal overflow-hidden">
  <div class="absolute inset-0 grain"></div>
  <div class="absolute -top-40 -right-40 w-[500px] h-[500px] bg-red/5 rounded-full blur-[120px]"></div>

  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl">
      {eyebrow && (
        <span class="text-sm font-medium text-red tracking-wider uppercase">{eyebrow}</span>
      )}
      <h1 class="mt-2 text-3xl sm:text-5xl lg:text-6xl 3xl:text-7xl font-display font-extrabold text-cream tracking-tight leading-tight">
        {heading}
        {headingAccent && (
          <span class="text-red"> {headingAccent}</span>
        )}
      </h1>
      {subtitle && (
        <p class="mt-4 text-base sm:text-lg 3xl:text-xl text-cream/50 max-w-xl 3xl:max-w-2xl">
          {subtitle}
        </p>
      )}
    </div>
  </div>

  <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-cream to-transparent"></div>
</section>
