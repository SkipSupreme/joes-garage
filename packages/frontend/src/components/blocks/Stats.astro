---
interface Props {
  stats: Array<{
    value: string;
    suffix?: string;
    label: string;
  }>;
}

const { stats } = Astro.props;
---

<section class="py-10 sm:py-16 lg:py-20" data-reveal>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 sm:gap-6">
      {stats.map((stat) => (
        <div class="text-center" data-reveal-stagger>
          <div class="text-4xl sm:text-3xl lg:text-5xl font-display font-extrabold text-coal">
            {stat.value}{stat.suffix && <span class="text-red">{stat.suffix}</span>}
          </div>
          <div class="text-sm lg:text-base text-ink-muted mt-2">{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>
