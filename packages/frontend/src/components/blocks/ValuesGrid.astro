  check: '<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>',
};
---

<section class="py-10 sm:py-16 lg:py-20 bg-cream-dark">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-2xl mx-auto mb-8 sm:mb-12">
      <h2 class="text-2xl sm:text-4xl font-display font-extrabold text-coal">
        {heading}
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 3xl:gap-12" data-reveal-stagger>
      {values.map((value) => (
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-red/10 mb-5">
            <svg class="w-7 h-7 text-red" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <Fragment set:html={iconMap[value.icon || 'shield'] || iconMap.shield} />
            </svg>
          </div>
          <h3 class="text-lg font-display font-bold text-coal mb-2">{value.title}</h3>
          <p class="text-ink-muted leading-relaxed">{value.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
