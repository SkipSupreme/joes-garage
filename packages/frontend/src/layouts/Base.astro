---
import '../styles/global.css';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import { getSiteSettings } from '../lib/payload';

// Font file URLs — resolved by Vite with content hashes for preload hints
import oswaldLatinUrl from '@fontsource-variable/oswald/files/oswald-latin-wght-normal.woff2?url';
import jostLatinUrl from '@fontsource-variable/jost/files/jost-latin-wght-normal.woff2?url';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = "Joe's Garage — Calgary's neighbourhood bike shop. Expert bicycle repairs and quality rentals.",
  ogImage,
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site);

// Fetch site settings from CMS for structured data
let settings: any = null;
try {
  settings = await getSiteSettings();
} catch {
  // CMS not available — use hardcoded fallback
}

const shopName = settings?.shopName || "Joe's Garage";
const phone = settings?.phone || '(403) 874-5637';
const email = settings?.email || 'joe@joesgarage.mobi';
const address = settings?.address || '355 8 St SW, Calgary, AB';

// Parse address parts for structured data
const addressParts = address.split(',').map((p: string) => p.trim());
const streetAddress = addressParts[0] || '355 8 St SW';
const cityProvince = addressParts[1] || 'Calgary, AB';
const [city, province] = cityProvince.includes(' ')
  ? [cityProvince.replace(/\s+\w{2}$/, '').trim(), cityProvince.match(/\w{2}$/)?.[0] || 'AB']
  : ['Calgary', 'AB'];

// Build hours for Schema.org from CMS
const cmsHours = settings?.hours?.length ? settings.hours : null;
const schemaHours = cmsHours
  ? (() => {
      const dayMap: Record<string, string> = {};
      for (const h of cmsHours) {
        const key = `${h.open}-${h.close}`;
        if (!dayMap[key]) dayMap[key] = '';
        dayMap[key] += (dayMap[key] ? ',' : '') + h.day;
      }
      return Object.entries(dayMap).map(([timeRange, days]) => {
        const [opens, closes] = timeRange.split('-');
        // Convert "10:00 AM" to "10:00" 24h format
        const to24 = (t: string) => {
          const match = t.trim().match(/^(\d{1,2}):(\d{2})\s*(AM|PM)?$/i);
          if (!match) return t;
          let hr = parseInt(match[1]);
          if (match[3]?.toUpperCase() === 'PM' && hr !== 12) hr += 12;
          if (match[3]?.toUpperCase() === 'AM' && hr === 12) hr = 0;
          return `${hr.toString().padStart(2, '0')}:${match[2]}`;
        };
        return {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": days.split(','),
          "opens": to24(opens),
          "closes": to24(closes),
        };
      });
    })()
  : [{ "@type": "OpeningHoursSpecification", "dayOfWeek": ["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"], "opens": "10:00", "closes": "19:00" }];
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#111111" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Preload critical fonts (eliminates font-loading waterfall) -->
    <link rel="preload" href={oswaldLatinUrl} as="font" type="font/woff2" crossorigin />
    <link rel="preload" href={jostLatinUrl} as="font" type="font/woff2" crossorigin />

    <!-- Open Graph -->
    <meta property="og:title" content={`${title} | Joe's Garage`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    {ogImage && (
      <>
        <meta property="og:image" content={ogImage} />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
      </>
    )}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Joe's Garage`} />
    <meta name="twitter:description" content={description} />
    {ogImage && <meta name="twitter:image" content={ogImage} />}

    <!-- DNS prefetch for API -->
    <link rel="dns-prefetch" href={import.meta.env.PUBLIC_API_URL || 'http://localhost:3001'} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Joe's Garage</title>

    <!-- Schema.org LocalBusiness structured data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": shopName,
      "description": "Calgary's neighbourhood bike shop. Expert bicycle repairs and quality rentals.",
      "url": "https://joes-garage.ca",
      "telephone": phone,
      "address": {
        "@type": "PostalAddress",
        "streetAddress": streetAddress,
        "addressLocality": city,
        "addressRegion": province,
        "addressCountry": "CA"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 51.0506254,
        "longitude": -114.082628
      },
      "openingHoursSpecification": schemaHours,
      "priceRange": "$$",
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Services",
        "itemListElement": [
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Bicycle Repair" }},
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Bike Rental" }}
        ]
      }
    })} />
  </head>
  <body class="min-h-screen flex flex-col bg-cream text-ink font-body">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed focus:top-2 focus:left-2 focus:z-[100] focus:px-4 focus:py-2 focus:bg-coal focus:text-cream focus:rounded-lg focus:text-sm focus:font-medium">
      Skip to main content
    </a>
    <Nav />

    <!-- Spacer for fixed nav -->
    <div class="h-14 sm:h-16 lg:h-20 3xl:h-24"></div>

    <main id="main-content" class="flex-1">
      <slot />
    </main>

    <Footer />

    <!-- Scroll reveal observer -->
    <script>
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('revealed');
              observer.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.1, rootMargin: '0px 0px -40px 0px' }
      );
      document.querySelectorAll('[data-reveal], [data-reveal-stagger]').forEach((el) => observer.observe(el));
    </script>
  </body>
</html>
