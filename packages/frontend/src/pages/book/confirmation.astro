---
import Base from '../../layouts/Base.astro';
import { getSiteSettings } from '../../lib/payload';

// This page will be SSR (server-rendered) to fetch booking data securely
// export const prerender = false;

// Fetch contact info from CMS so it stays in sync
let settings: any = null;
try {
  settings = await getSiteSettings();
} catch {
  // CMS not available — use fallback
}

const phone = settings?.phone || '(403) 874-5637';
const email = settings?.email || 'joe@joesgarage.mobi';
const phoneTel = 'tel:+1' + phone.replace(/[^\d]/g, '');
---

<Base title="Booking Confirmed" description="Your bike rental is confirmed! Check your email for the waiver PDF.">

  <section class="py-20 lg:py-28">
    <div class="mx-auto max-w-xl px-4 sm:px-6 lg:px-8 text-center" x-data="confirmation">

      <!-- Success icon -->
      <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-success/10 mb-8 animate-scale-in">
        <svg class="w-10 h-10 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
        </svg>
      </div>

      <h1 class="text-3xl sm:text-4xl font-display font-extrabold text-coal tracking-tight animate-fade-up">
        You're all set!
      </h1>
      <p class="mt-3 text-lg text-ink-muted animate-fade-up delay-100">
        Your bike rental has been confirmed. Check your email for details.
      </p>

      <!-- Booking details card -->
      <div class="mt-10 p-8 rounded-2xl bg-cream-dark border border-parchment text-left animate-fade-up delay-200">
        <template x-if="loading">
          <div class="text-center py-8">
            <svg class="w-8 h-8 animate-spin text-ink-light mx-auto" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"/></svg>
            <p class="mt-3 text-sm text-ink-muted">Loading booking details...</p>
          </div>
        </template>

        <template x-if="!loading && booking">
          <div>
            <div class="text-center mb-6">
              <span class="text-xs font-bold tracking-wider uppercase text-ink-light">Confirmation #</span>
              <div class="font-mono text-2xl font-bold text-coal mt-1" x-text="booking.id?.split('-')[0]?.toUpperCase()"></div>
            </div>

            <div class="border-t border-parchment pt-6 space-y-4 text-sm">
              <div class="flex justify-between">
                <span class="text-ink-muted">Status</span>
                <span class="font-medium text-success flex items-center gap-1">
                  <div class="w-2 h-2 rounded-full bg-success"></div>
                  Confirmed
                </span>
              </div>
              <div class="flex justify-between">
                <span class="text-ink-muted">Name</span>
                <span class="font-medium text-coal" x-text="booking.full_name"></span>
              </div>
              <div class="flex justify-between">
                <span class="text-ink-muted">Email</span>
                <span class="font-medium text-coal" x-text="booking.email"></span>
              </div>
              <template x-if="booking.duration_type">
                <div class="flex justify-between">
                  <span class="text-ink-muted">Duration</span>
                  <span class="font-medium text-coal" x-text="durationLabel"></span>
                </div>
              </template>
              <template x-if="booking.items && booking.items.length > 1">
                <div>
                  <span class="text-ink-muted">Bikes</span>
                  <div class="mt-1 space-y-1">
                    <template x-for="item in booking.items" :key="item.bike_id">
                      <div class="flex justify-between text-sm">
                        <span class="font-medium text-coal" x-text="item.bike_name"></span>
                        <span class="text-ink-muted" x-text="item.bike_type"></span>
                      </div>
                    </template>
                  </div>
                </div>
              </template>
              <template x-if="!booking.items || booking.items.length <= 1">
                <div class="flex justify-between">
                  <span class="text-ink-muted">Bike</span>
                  <span class="font-medium text-coal" x-text="booking.bike_name"></span>
                </div>
              </template>
              <div class="flex justify-between">
                <span class="text-ink-muted">When</span>
                <span class="font-medium text-coal text-right" x-text="formatPeriod(booking.rental_period)"></span>
              </div>
              <template x-if="booking.total_amount">
                <div class="border-t border-parchment pt-4 space-y-2">
                  <div class="flex justify-between text-sm">
                    <span class="text-ink-muted">Rental (<span x-text="durationLabel"></span>)</span>
                    <span class="font-medium text-coal">$<span x-text="parseFloat(booking.rental_amount).toFixed(2)"></span></span>
                  </div>
                  <div class="flex justify-between text-sm">
                    <span class="text-ink-muted">Security deposit <span class="text-xs">(refunded on return)</span></span>
                    <span class="font-medium text-coal">$<span x-text="parseFloat(booking.deposit_amount).toFixed(2)"></span></span>
                  </div>
                  <div class="flex justify-between pt-2 border-t border-parchment">
                    <span class="font-medium text-coal">Total pre-authorized</span>
                    <span class="font-display font-extrabold text-coal">$<span x-text="parseFloat(booking.total_amount).toFixed(2)"></span></span>
                  </div>
                  <p class="text-xs text-ink-light mt-1">The $<span x-text="parseFloat(booking.deposit_amount).toFixed(2)"></span> deposit is a hold on your card and will be released when you return the bike in good condition.</p>
                </div>
              </template>
            </div>
          </div>
        </template>

        <template x-if="!loading && error">
          <div class="text-center py-8">
            <p class="text-ink-muted" x-text="error"></p>
          </div>
        </template>
      </div>

      <!-- Group waiver QR section — shown when booking has multiple bikes and waivers still needed -->
      <template x-if="!loading && booking && itemCount > 1">
        <div class="mt-8 p-6 sm:p-8 rounded-2xl bg-amber/5 border border-amber/20 text-center animate-fade-up delay-250">
          <div class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-amber/10 mb-3">
            <svg class="w-5 h-5 text-amber" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>

          <h3 class="text-lg font-display font-bold text-coal">
            <span x-text="remainingWaivers"></span> more waiver<span x-show="remainingWaivers !== 1">s</span> needed
          </h3>
          <p class="mt-1 text-sm text-ink-muted max-w-sm mx-auto">
            Each rider needs to sign their own waiver. Share the QR code or link below with your group.
          </p>

          <!-- QR code -->
          <template x-if="qrDataUrl">
            <div class="mt-5">
              <img :src="qrDataUrl" alt="Waiver QR code" class="w-48 h-48 mx-auto rounded-xl border border-parchment bg-white p-2" />
            </div>
          </template>

          <!-- Waiver link with copy button -->
          <div class="mt-4 flex items-center gap-2 max-w-sm mx-auto">
            <input
              type="text"
              :value="waiverUrl"
              readonly
              class="flex-1 px-3 py-2 text-xs bg-white border border-parchment rounded-lg text-ink-muted truncate cursor-text"
            />
            <button
              type="button"
              @click="navigator.clipboard.writeText(waiverUrl); $el.textContent = 'Copied!'; setTimeout(() => $el.textContent = 'Copy', 1500)"
              class="shrink-0 px-4 py-2 text-xs font-bold bg-coal text-cream rounded-lg hover:bg-coal-light transition-colors"
            >
              Copy
            </button>
          </div>

          <!-- Waiver progress -->
          <div class="mt-4 text-xs text-ink-muted">
            <span x-text="signedWaiverCount"></span> of <span x-text="itemCount"></span> waivers signed
          </div>
        </div>
      </template>

      <!-- Actions -->
      <div class="mt-8 flex flex-col sm:flex-row gap-3 justify-center animate-fade-up delay-300">
        <a href="/" class="inline-flex items-center justify-center px-6 py-3 bg-coal text-cream font-bold rounded-xl hover:bg-coal-light transition-colors">
          Back to Home
        </a>
        <a href={phoneTel} class="inline-flex items-center justify-center px-6 py-3 text-coal font-medium rounded-xl border border-coal/15 hover:border-coal/30 transition-colors">
          Call {phone}
        </a>
      </div>

      <p class="mt-8 text-sm text-ink-light animate-fade-up delay-400">
        Questions? Call us at {phone} or email {email}
      </p>
    </div>
  </section>


</Base>
