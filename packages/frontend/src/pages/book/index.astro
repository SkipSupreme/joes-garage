---
import Base from '../../layouts/Base.astro';
---

<Base title="Book a Rental" description="Book a bike rental from Joe's Garage, Calgary. Pick your dates, choose a bike, sign the waiver, and pay — all online.">

  <!-- Booking page header -->
  <section class="bg-coal py-12">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-3xl sm:text-4xl font-display font-extrabold text-cream tracking-tight">
        Book Your Rental
      </h1>
      <p class="mt-3 text-cream/50">
        Pick dates, choose a bike, sign the waiver, and pay. Takes about 5 minutes.
      </p>
    </div>
  </section>

  <!-- Multi-step booking flow (Alpine.js) -->
  <section class="py-12 lg:py-16">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8" x-data="bookingFlow">

      <!-- Step indicators -->
      <div class="flex items-center justify-center gap-2 mb-12">
        <template x-for="(label, i) in ['Dates', 'Bike', 'Waiver', 'Payment']" :key="i">
          <div class="flex items-center gap-2">
            <div
              :class="{
                'bg-amber text-coal': step > i + 1,
                'bg-red text-cream': step === i + 1,
                'bg-parchment text-ink-light': step < i + 1,
              }"
              class="w-8 h-8 rounded-full flex items-center justify-center text-xs font-bold transition-all duration-300"
            >
              <template x-if="step > i + 1">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/></svg>
              </template>
              <template x-if="step <= i + 1">
                <span x-text="i + 1"></span>
              </template>
            </div>
            <span
              :class="step >= i + 1 ? 'text-coal' : 'text-ink-light'"
              class="text-xs font-medium hidden sm:block transition-colors"
              x-text="label"
            ></span>
            <template x-if="i < 3">
              <div class="w-8 h-px bg-parchment mx-1 hidden sm:block"></div>
            </template>
          </div>
        </template>
      </div>

      <!-- ═══ STEP 1: Date Selection ═══ -->
      <div x-show="step === 1" x-transition:enter="animate-fade-up" class="max-w-lg mx-auto">
        <h2 class="text-2xl font-display font-bold text-coal mb-2">When do you want to ride?</h2>
        <p class="text-ink-muted mb-8">Select your rental start and end dates.</p>

        <div class="space-y-5">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label for="start-date" class="block text-sm font-medium text-coal mb-1.5">Start Date</label>
              <input
                type="date"
                id="start-date"
                x-model="startDate"
                :min="today"
                required
                class="w-full px-4 py-3 rounded-xl bg-cream-dark border border-parchment text-coal focus:outline-none focus:border-amber focus:ring-1 focus:ring-amber/30 transition-colors"
              />
            </div>
            <div>
              <label for="end-date" class="block text-sm font-medium text-coal mb-1.5">End Date</label>
              <input
                type="date"
                id="end-date"
                x-model="endDate"
                :min="startDate || today"
                required
                class="w-full px-4 py-3 rounded-xl bg-cream-dark border border-parchment text-coal focus:outline-none focus:border-amber focus:ring-1 focus:ring-amber/30 transition-colors"
              />
            </div>
          </div>

          <template x-if="startDate && endDate">
            <div class="p-4 rounded-xl bg-amber/5 border border-amber/15">
              <p class="text-sm text-ink">
                <span class="font-medium" x-text="rentalDays"></span> day<span x-show="rentalDays > 1">s</span> rental
              </p>
            </div>
          </template>

          <template x-if="dateError">
            <div class="p-4 rounded-xl bg-error/5 border border-error/15">
              <p class="text-sm text-error" x-text="dateError"></p>
            </div>
          </template>

          <button
            @click="checkAvailability()"
            :disabled="!startDate || !endDate || loading || !!dateError"
            class="w-full px-6 py-3.5 bg-coal text-cream font-bold rounded-xl hover:bg-coal-light disabled:opacity-40 disabled:cursor-not-allowed transition-all flex items-center justify-center gap-2"
          >
            <span x-show="!loading">Check Availability</span>
            <span x-show="loading" x-cloak class="flex items-center gap-2">
              <svg class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"/></svg>
              Checking...
            </span>
          </button>
        </div>
      </div>

      <!-- ═══ STEP 2: Bike Selection ═══ -->
      <div x-show="step === 2" x-transition:enter="animate-fade-up">
        <div class="flex items-center justify-between mb-8">
          <div>
            <h2 class="text-2xl font-display font-bold text-coal">Pick your bike</h2>
            <p class="text-ink-muted mt-1">
              <span x-text="bikes.length"></span> bike<span x-show="bikes.length !== 1">s</span> available for
              <span class="font-medium text-coal" x-text="startDate"></span> to <span class="font-medium text-coal" x-text="endDate"></span>
            </p>
          </div>
          <button @click="step = 1" class="text-sm text-ink-muted hover:text-coal transition-colors flex items-center gap-1">
            <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
            Change dates
          </button>
        </div>

        <!-- Hold timer -->
        <template x-if="holdExpires">
          <div class="mb-6 p-3 rounded-xl bg-amber/5 border border-amber/15 flex items-center justify-between">
            <span class="text-sm text-ink-muted">Hold expires in</span>
            <span class="font-mono font-bold text-amber" x-text="holdCountdown"></span>
          </div>
        </template>

        <template x-if="bikes.length === 0">
          <div class="text-center py-16 px-8 rounded-2xl bg-cream-dark border border-parchment">
            <svg class="w-12 h-12 text-ink-light mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M15.182 16.318A4.486 4.486 0 0012.016 15a4.486 4.486 0 00-3.198 1.318M21 12a9 9 0 11-18 0 9 9 0 0118 0zM9.75 9.75c0 .414-.168.75-.375.75S9 10.164 9 9.75 9.168 9 9.375 9s.375.336.375.75zm-.375 0h.008v.015h-.008V9.75zm5.625 0c0 .414-.168.75-.375.75s-.375-.336-.375-.75.168-.75.375-.75.375.336.375.75zm-.375 0h.008v.015h-.008V9.75z"/></svg>
            <p class="text-ink-muted">No bikes available for these dates. Try different dates?</p>
            <button @click="step = 1" class="mt-4 text-sm font-medium text-amber hover:text-amber-dark transition-colors">Change dates</button>
          </div>
        </template>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <template x-for="bike in bikes" :key="bike.id">
            <div
              @click="selectBike(bike)"
              :class="selectedBike?.id === bike.id ? 'border-amber shadow-lg shadow-amber/10' : 'border-parchment hover:border-amber/30'"
              class="group p-6 rounded-2xl bg-cream-dark border cursor-pointer transition-all duration-200"
            >
              <!-- Bike image placeholder -->
              <div class="aspect-[3/2] rounded-xl bg-parchment mb-4 flex items-center justify-center">
                <svg class="w-10 h-10 text-ink-light" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909M3.75 21h16.5A2.25 2.25 0 0022.5 18.75V5.25A2.25 2.25 0 0020.25 3H3.75A2.25 2.25 0 001.5 5.25v13.5A2.25 2.25 0 003.75 21z"/></svg>
              </div>
              <div class="flex items-start justify-between gap-2">
                <div>
                  <h3 class="font-display font-bold text-coal" x-text="bike.name"></h3>
                  <p class="text-xs text-ink-muted mt-0.5" x-text="bike.type + ' · Size ' + bike.size"></p>
                </div>
                <div class="text-right">
                  <div class="font-display font-extrabold text-coal">$<span x-text="bike.price_per_day"></span></div>
                  <div class="text-xs text-ink-light">/day</div>
                </div>
              </div>
              <div class="mt-3 flex items-center justify-between">
                <span class="text-sm font-medium text-amber">
                  $<span x-text="(bike.price_per_day * rentalDays).toFixed(2)"></span> total
                </span>
                <span x-show="selectedBike?.id === bike.id" class="text-xs font-bold text-amber flex items-center gap-1">
                  <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/></svg>
                  Selected
                </span>
              </div>
            </div>
          </template>
        </div>

        <template x-if="selectedBike && !holdExpires">
          <div class="mt-8">
            <button
              @click="createHold()"
              :disabled="loading"
              class="w-full px-6 py-3.5 bg-red text-cream font-bold rounded-xl hover:bg-red-light disabled:opacity-40 transition-all flex items-center justify-center gap-2"
            >
              <span x-show="!loading">Reserve This Bike</span>
              <span x-show="loading" x-cloak class="flex items-center gap-2">
                <svg class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"/></svg>
                Reserving...
              </span>
            </button>
          </div>
        </template>

        <template x-if="holdExpires">
          <div class="mt-8">
            <button
              @click="step = 3"
              class="w-full px-6 py-3.5 bg-red text-cream font-bold rounded-xl hover:bg-red-light transition-all"
            >
              Continue to Waiver
            </button>
          </div>
        </template>
      </div>

      <!-- ═══ STEP 3: Waiver ═══ -->
      <div x-show="step === 3" x-transition:enter="animate-fade-up" class="max-w-2xl mx-auto">
        <div class="flex items-center justify-between mb-8">
          <div>
            <h2 class="text-2xl font-display font-bold text-coal">Sign the Waiver</h2>
            <p class="text-ink-muted mt-1">Please fill in your details and sign below.</p>
          </div>
          <template x-if="holdExpires">
            <div class="text-right">
              <span class="text-xs text-ink-muted">Hold expires</span>
              <div class="font-mono font-bold text-amber text-sm" x-text="holdCountdown"></div>
            </div>
          </template>
        </div>

        <form @submit.prevent="submitWaiver()" class="space-y-5">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
            <div>
              <label class="block text-sm font-medium text-coal mb-1.5">Full Name</label>
              <input type="text" x-model="waiver.fullName" required minlength="2" maxlength="200" class="w-full px-4 py-3 rounded-xl bg-cream-dark border border-parchment text-coal placeholder:text-ink-light focus:outline-none focus:border-amber focus:ring-1 focus:ring-amber/30 transition-colors" placeholder="Your full name" />
            </div>
            <div>
              <label class="block text-sm font-medium text-coal mb-1.5">Email</label>
              <input type="email" x-model="waiver.email" required maxlength="254" class="w-full px-4 py-3 rounded-xl bg-cream-dark border border-parchment text-coal placeholder:text-ink-light focus:outline-none focus:border-amber focus:ring-1 focus:ring-amber/30 transition-colors" placeholder="you@email.com" />
            </div>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
            <div>
              <label class="block text-sm font-medium text-coal mb-1.5">Phone</label>
              <input type="tel" x-model="waiver.phone" required minlength="7" maxlength="20" class="w-full px-4 py-3 rounded-xl bg-cream-dark border border-parchment text-coal placeholder:text-ink-light focus:outline-none focus:border-amber focus:ring-1 focus:ring-amber/30 transition-colors" placeholder="(403) 555-1234" />
            </div>
            <div>
              <label class="block text-sm font-medium text-coal mb-1.5">Date of Birth</label>
              <input type="date" x-model="waiver.dateOfBirth" required class="w-full px-4 py-3 rounded-xl bg-cream-dark border border-parchment text-coal focus:outline-none focus:border-amber focus:ring-1 focus:ring-amber/30 transition-colors" />
            </div>
          </div>

          <!-- Waiver text -->
          <div class="p-4 rounded-xl bg-cream-dark border border-parchment max-h-48 overflow-y-auto text-sm text-ink-muted leading-relaxed">
            <p class="font-medium text-coal mb-2">Rental Waiver Agreement</p>
            <p>By signing this waiver, I acknowledge that cycling involves inherent risks including but not limited to falls, collisions, and equipment failure. I agree to wear a helmet at all times while riding a rental bicycle from Joe's Garage. I accept full responsibility for the rental bicycle during the rental period and agree to return it in the same condition. I agree to pay for any damages beyond normal wear and tear. Joe's Garage is not responsible for personal injury, property damage, or theft during the rental period.</p>
            <p class="mt-3">I confirm that I am physically able to operate a bicycle safely and that I am at least 18 years of age (or have parental/guardian consent).</p>
          </div>

          <!-- Consent checkboxes -->
          <div class="space-y-3">
            <label class="flex items-start gap-3 cursor-pointer group">
              <input type="checkbox" x-model="waiver.consentElectronic" required class="mt-0.5 w-5 h-5 rounded border-parchment text-amber focus:ring-amber/30 accent-amber" />
              <span class="text-sm text-ink-muted group-hover:text-ink transition-colors">I consent to sign this waiver electronically</span>
            </label>
            <label class="flex items-start gap-3 cursor-pointer group">
              <input type="checkbox" x-model="waiver.consentTerms" required class="mt-0.5 w-5 h-5 rounded border-parchment text-amber focus:ring-amber/30 accent-amber" />
              <span class="text-sm text-ink-muted group-hover:text-ink transition-colors">I have read and agree to the waiver terms above</span>
            </label>
          </div>

          <!-- Signature pad -->
          <div>
            <label class="block text-sm font-medium text-coal mb-1.5">Your Signature</label>
            <div class="relative rounded-xl border-2 border-dashed border-parchment bg-white overflow-hidden">
              <canvas
                id="signature-pad"
                class="w-full"
                style="height: 160px; touch-action: none;"
              ></canvas>
              <button
                type="button"
                @click="clearSignature()"
                class="absolute top-2 right-2 px-2.5 py-1 text-xs font-medium text-ink-muted bg-cream-dark rounded-lg hover:text-coal transition-colors"
              >
                Clear
              </button>
            </div>
            <p class="text-xs text-ink-light mt-1.5">Draw your signature above using your mouse or finger.</p>
          </div>

          <template x-if="waiverError">
            <div class="p-4 rounded-xl bg-error/5 border border-error/15">
              <p class="text-sm text-error" x-text="waiverError"></p>
            </div>
          </template>

          <button
            type="submit"
            :disabled="loading || !waiver.consentElectronic || !waiver.consentTerms"
            class="w-full px-6 py-3.5 bg-red text-cream font-bold rounded-xl hover:bg-red-light disabled:opacity-40 disabled:cursor-not-allowed transition-all flex items-center justify-center gap-2"
          >
            <span x-show="!loading">Sign & Continue to Payment</span>
            <span x-show="loading" x-cloak class="flex items-center gap-2">
              <svg class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"/></svg>
              Submitting...
            </span>
          </button>
        </form>
      </div>

      <!-- ═══ STEP 4: Payment ═══ -->
      <div x-show="step === 4" x-transition:enter="animate-fade-up" class="max-w-lg mx-auto">
        <h2 class="text-2xl font-display font-bold text-coal mb-2">Complete Your Booking</h2>
        <p class="text-ink-muted mb-8">Secure payment via Moneris. Your card info never touches our server.</p>

        <!-- Order summary -->
        <div class="p-6 rounded-2xl bg-cream-dark border border-parchment mb-8">
          <h3 class="text-sm font-display font-bold text-coal uppercase tracking-wide mb-4">Order Summary</h3>
          <div class="space-y-3 text-sm">
            <div class="flex justify-between">
              <span class="text-ink-muted">Bike</span>
              <span class="font-medium text-coal" x-text="selectedBike?.name"></span>
            </div>
            <div class="flex justify-between">
              <span class="text-ink-muted">Dates</span>
              <span class="font-medium text-coal" x-text="startDate + ' → ' + endDate"></span>
            </div>
            <div class="flex justify-between">
              <span class="text-ink-muted">Duration</span>
              <span class="font-medium text-coal"><span x-text="rentalDays"></span> days</span>
            </div>
            <div class="border-t border-parchment my-3"></div>
            <div class="flex justify-between">
              <span class="text-ink-muted">Rental (<span x-text="rentalDays"></span> x $<span x-text="selectedBike?.price_per_day"></span>)</span>
              <span class="font-medium text-coal">$<span x-text="(selectedBike?.price_per_day * rentalDays).toFixed(2)"></span></span>
            </div>
            <div class="flex justify-between">
              <span class="text-ink-muted">Security Deposit</span>
              <span class="font-medium text-coal">$<span x-text="selectedBike?.deposit_amount?.toFixed(2) || '0.00'"></span></span>
            </div>
            <div class="border-t border-parchment my-3"></div>
            <div class="flex justify-between text-base">
              <span class="font-bold text-coal">Total</span>
              <span class="font-display font-extrabold text-coal">$<span x-text="totalAmount.toFixed(2)"></span></span>
            </div>
          </div>
          <p class="mt-3 text-xs text-ink-light">Deposit is pre-authorized and refunded upon bike return in good condition.</p>
        </div>

        <!-- Moneris iframe placeholder -->
        <div class="rounded-xl border border-parchment bg-white p-6 mb-6">
          <div class="text-center py-8">
            <svg class="w-10 h-10 text-ink-light mx-auto mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5z"/></svg>
            <p class="text-sm text-ink-muted">Moneris Hosted Tokenization</p>
            <p class="text-xs text-ink-light mt-1">Card entry iframe loads here in production</p>
          </div>
        </div>

        <template x-if="paymentError">
          <div class="p-4 rounded-xl bg-error/5 border border-error/15 mb-6">
            <p class="text-sm text-error" x-text="paymentError"></p>
          </div>
        </template>

        <button
          @click="processPayment()"
          :disabled="loading"
          class="w-full px-6 py-4 bg-amber text-coal font-bold text-lg rounded-xl hover:bg-amber-light hover:shadow-xl hover:shadow-amber/20 disabled:opacity-40 transition-all flex items-center justify-center gap-2"
        >
          <span x-show="!loading">Pay $<span x-text="totalAmount.toFixed(2)"></span></span>
          <span x-show="loading" x-cloak class="flex items-center gap-2">
            <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"/></svg>
            Processing...
          </span>
        </button>

        <p class="mt-4 text-center text-xs text-ink-light flex items-center justify-center gap-1.5">
          <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
          Secured by Moneris. PCI DSS compliant.
        </p>
      </div>

      <!-- ═══ Global error display ═══ -->
      <template x-if="globalError">
        <div class="mt-8 p-4 rounded-xl bg-error/5 border border-error/15 text-center">
          <p class="text-sm text-error" x-text="globalError"></p>
        </div>
      </template>

    </div>
  </section>

</Base>
