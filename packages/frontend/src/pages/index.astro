---
import Base from '../layouts/Base.astro';
import BlockRenderer from '../components/blocks/BlockRenderer.astro';
import { getPage } from '../lib/payload';

// Try to fetch homepage from CMS — fall back to hardcoded content if unavailable
let page: any = null;
try {
  page = await getPage('home');
} catch {
  // CMS not available — will render hardcoded fallback below
}

const hasCmsContent = page && page.layout && page.layout.length > 0;
const pageTitle = hasCmsContent ? (page.meta?.title || page.title || 'Home') : 'Home';
const pageDescription = hasCmsContent
  ? (page.meta?.description || "Joe's Garage — Calgary's shipping container bike shop")
  : "Joe's Garage — Calgary's shipping container bike shop on the Bow River pathway. Expert bicycle repairs, quality rentals, and honest advice since 2007. Book your rental online today.";
---

<Base title={pageTitle} description={pageDescription}>

  {hasCmsContent ? (
    <!-- CMS-driven content -->
    <BlockRenderer blocks={page.layout} />
  ) : (
    <!-- Hardcoded fallback when CMS is unavailable -->

    <!-- HERO — Shipping container on the Bow River -->
    <section class="relative lg:min-h-[80vh] flex items-center overflow-hidden bg-coal">
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-to-br from-coal via-coal-light to-coal"></div>
        <div class="absolute inset-0 pattern-corrugated"></div>
        <div class="absolute -top-20 -right-20 w-[500px] h-[500px] bg-red/8 rounded-full blur-[120px]"></div>
        <div class="absolute -bottom-32 left-1/4 w-[600px] h-[300px] bg-amber/4 rounded-full blur-[100px]"></div>
        <div class="absolute inset-0 grain"></div>
      </div>

      <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pt-12 pb-24 sm:pt-16 sm:pb-28 lg:pt-24 lg:pb-32">
        <div class="relative z-10 grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-12 items-center">
          <div class="max-w-xl 3xl:max-w-2xl">
            <div class="animate-fade-up inline-flex items-center gap-2 px-3 py-1.5 mb-5 rounded-full bg-red/10 border border-red/20">
              <div class="w-2 h-2 rounded-full bg-red"></div>
              <span class="text-xs font-medium text-red-light tracking-wide uppercase">Bow River Pathway — Since 2007</span>
            </div>

            <h1 class="animate-fade-up delay-100 text-3xl sm:text-5xl lg:text-6xl xl:text-7xl 3xl:text-8xl font-display font-extrabold text-cream leading-[0.95] tracking-tight">
              Calgary's Shipping Container
              <span class="block text-red mt-1 sm:mt-2">Bike Shop.</span>
            </h1>

            <p class="animate-fade-up delay-200 mt-5 sm:mt-6 text-base sm:text-lg lg:text-xl 3xl:text-2xl text-cream/60 leading-relaxed max-w-md 3xl:max-w-lg">
              Expert repairs, quality rentals, and honest advice — all from a steel shipping container right on the Bow River pathway.
            </p>

            <div class="animate-fade-up delay-300 mt-6 sm:mt-8 flex flex-wrap gap-3 sm:gap-4">
              <a
                href="/book"
                class="group inline-flex items-center gap-2 px-6 sm:px-8 py-3.5 sm:py-4 bg-red text-cream font-bold rounded-xl hover:bg-red-light hover:shadow-xl hover:shadow-red/20 hover:-translate-y-0.5 transition-all duration-200"
              >
                Book a Rental
                <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              </a>
              <a
                href="/services"
                class="inline-flex items-center gap-2 px-6 sm:px-8 py-3.5 sm:py-4 text-cream/80 font-medium rounded-xl border border-cream/15 hover:border-cream/30 hover:text-cream hover:bg-cream/5 transition-all duration-200"
